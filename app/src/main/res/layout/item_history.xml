<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/deviceHistory"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:layout_marginVertical="10dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="10dp"
        android:background="@drawable/rounded_blue_bg">

        <TextView
            android:id="@+id/deviceTitleHolder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:text="@string/device_name"
            android:textColor="@color/dark_blue"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/lastTreatment"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="@string/last_recognized_treatment"
            android:textSize="16sp"
            android:textColor="@color/dark_blue"
            android:layout_below="@id/deviceTitleHolder"
            android:layout_marginTop="15dp"
            android:layout_marginStart="15dp"/>

        <TextView
            android:id="@+id/deviceHistoryTimestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/deviceTitleHolder"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="15dp"
            android:text="@string/timestamp"
            android:textSize="16sp"
            android:layout_marginTop="15dp"
            android:textColor="@color/dark_blue"
            android:textStyle="bold" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
