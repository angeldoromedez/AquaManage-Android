<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:padding="20dp">

    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_alignParentStart="true"
        android:src="@drawable/baseline_arrow_back_24" />

    <TextView
        android:id="@+id/tvForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/back_arrow"
        android:layout_marginTop="30dp"
        android:text="Forgot Password"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="@color/dark_blue"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvNewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvForgotPassword"
        android:layout_marginTop="10dp"
        android:layout_alignStart="@id/tvForgotPassword"
        android:text="New Password"
        android:textSize="18sp"
        android:textColor="@color/grey" />

    <ImageView
        android:id="@+id/ivLockIcon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@id/tvNewPassword"
        android:layout_marginTop="20dp"
        android:src="@drawable/forgotpass"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivLockIcon"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="24dp"
        android:text="Enter your email, phone, or username and we'll send you a link to change a new password"
        android:textColor="@color/grey"
        android:textSize="14sp"
        android:textAlignment="center"
        android:gravity="center"
        android:lineSpacingExtra="4dp" />


    <EditText
        android:id="@+id/userEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvInstruction"
        android:layout_marginTop="20dp"
        android:background="@drawable/edittext_background"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:padding="16dp"
        android:textColor="#000000"
        android:textSize="16sp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnContinue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userEmail"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_button"
        android:text="Continue"
        android:textColor="#FFFFFF"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

</RelativeLayout>

