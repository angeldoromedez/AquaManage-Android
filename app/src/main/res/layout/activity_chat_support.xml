<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <ImageView
        android:id="@+id/back_arrow"
        android:layout_width="40dp"
        android:layout_height="39dp"
        android:layout_gravity="left"
        android:layout_marginTop="30dp"
        android:src="@drawable/baseline_arrow_back_24" />

    <TextView
        android:id="@+id/titleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Technical Support"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/dark_blue"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"/>

    <!-- Cute Water Drop Icon -->
    <ImageView
        android:id="@+id/supportIcon"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/chat"
    android:layout_below="@id/titleText"
    android:layout_marginTop="8dp"
    android:layout_centerHorizontal="true"/>

    <!-- Subtitle -->
    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chat with Technical Support"
        android:textSize="16sp"
        android:textColor="@color/grey"
        android:layout_below="@id/supportIcon"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"/>

    <!-- Support Welcome Message -->
    <Button
        android:id="@+id/welcomeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello, How can I help you?"
        android:backgroundTint="#006fb1"
        android:textColor="#ffffff"
        android:layout_below="@id/subtitleText"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="20dp"
        android:drawablePadding="8dp"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:layout_marginBottom="24dp"/>

    <!-- Message Input Area -->
    <LinearLayout
        android:id="@+id/messageInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="#ffffff"
        android:gravity="center_vertical">

        <!-- Camera Button -->
        <ImageButton
            android:id="@+id/uploadPhoto"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_menu_camera"
            android:contentDescription="Upload Photo"/>

        <!-- EditText with purple border -->
        <EditText
            android:id="@+id/editMessage"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:hint="Type a message"
            android:padding="10dp"
            android:background="@drawable/edittext_background"
            android:textColor="#000000"
            android:textColorHint="#888888"/>

        <!-- Send Button with Icon -->
        <ImageButton
            android:id="@+id/sendButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_send"
        android:layout_marginStart="8dp"
        android:contentDescription="Send Message"/>
    </LinearLayout>

</RelativeLayout>
