<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:background="#ffffff">

    <!-- Title -->
    <TextView
        android:id="@+id/faqTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frequently Asked Questions"
        android:textStyle="bold"
        android:textSize="18sp"
        android:layout_marginTop="50dp"
        android:textColor="@color/dark_blue"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp" />

    <!-- FAQ Item 1 -->
    <LinearLayout
        android:id="@+id/faq1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/faqTitle"
        android:orientation="horizontal"
        android:paddingVertical="12dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp"
        android:background="?android:attr/selectableItemBackground">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="5"
            android:text="How to connect the device to the app?"
            android:textSize="16sp"
            android:textColor="#000000" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_proceed"
            android:contentDescription="Next"/>
    </LinearLayout>

    <!-- FAQ Item 2 -->
    <LinearLayout
        android:id="@+id/faq2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/faq1"
        android:orientation="horizontal"
        android:paddingVertical="12dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp"
        android:background="?android:attr/selectableItemBackground">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Can I create multiple accounts?"
            android:textSize="16sp"
            android:textColor="#000000" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_proceed"
            android:contentDescription="Next"/>
    </LinearLayout>

    <!-- FAQ Item 3 -->
    <LinearLayout
        android:id="@+id/faq3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/faq2"
        android:orientation="horizontal"
        android:paddingVertical="12dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp"
        android:background="?android:attr/selectableItemBackground">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Can I connect multiple devices?"
            android:textSize="16sp"
            android:textColor="#000000" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_proceed"
            android:contentDescription="Next"/>
    </LinearLayout>

    <!-- FAQ Item 4 -->
    <LinearLayout
        android:id="@+id/faq4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/faq3"
        android:orientation="horizontal"
        android:paddingVertical="12dp"
        android:gravity="center_vertical"
        android:layout_marginBottom="20dp"
        android:background="?android:attr/selectableItemBackground">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Why the device isnâ€™t working?"
            android:textSize="16sp"
            android:textColor="#000000" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_proceed"
            android:contentDescription="Next"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/chatCard"
        android:layout_width="500dp"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_top_corners"
        android:padding="12dp"
        android:layout_centerHorizontal="true">

    <!-- Draggable Indicator -->
        <View
            android:layout_width="40dp"
            android:layout_height="4dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:background="@android:color/white"
            android:alpha="0.6"
            android:backgroundTint="#ffffff" />

        <!-- Chat Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_centerInParent="true"
            android:background="@android:color/white"
            android:padding="10dp"
            android:elevation="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginHorizontal="16dp"
            android:clipToPadding="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_send"
                android:tint="#006fb1"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chat with Technical Support"
                android:textColor="#006fb1"
                android:textStyle="bold"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
