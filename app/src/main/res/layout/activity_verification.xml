<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:padding="20dp">

    <ImageView
        android:id="@+id/back_arrow"
        android:layout_marginTop="20dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_gravity="start"
        android:src="@drawable/baseline_arrow_back_24" />

    <TextView
        android:id="@+id/tvForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Account Verification"
        android:textSize="50sp"
        android:textStyle="bold"
        android:textColor="@color/dark_blue" />


    <TextView
        android:id="@+id/tvNewPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvForgotPassword"
        android:text="Verify your account"
        android:textSize="18sp"
        android:textColor="@color/grey" />

    <ImageView
        android:id="@+id/ivLockIcon"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_below="@id/tvNewPassword"
        android:layout_marginTop="20dp"
        android:src="@drawable/verification"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/tvInstruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivLockIcon"
        android:layout_marginTop="20dp"
        android:text="Enter your email and we'll send you an email to verify your account"
        android:textSize="14sp"
        android:textColor="@color/dark_blue"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:padding="16dp"
        android:textAlignment="center" />

    <EditText
        android:id="@+id/etEmailInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvInstruction"
        android:layout_marginTop="10dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:text="@string/email_hint"
        android:background="@drawable/edittext_background"
        android:padding="16dp"
        android:textColor="@color/grey"
        android:textSize="16sp"
        android:layout_centerHorizontal="true" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Continue_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/etEmailInput"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_button"
        android:text="Continue"
        android:textColor="#FFFFFF"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp" />

</RelativeLayout>