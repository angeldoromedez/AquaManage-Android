<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".NotificationsActivity">

    <ImageView
        android:id="@+id/history_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:contentDescription="@string/history_icon"
        android:src="@drawable/history"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/notification_profile_container"
        android:orientation="horizontal"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="16dp"
        tools:ignore="RelativeOverlap">

        <ImageView
            android:id="@+id/bell_icon"
            android:layout_width="40dp"
            android:layout_height="45dp"
            android:contentDescription="@string/bell_notification_icon"
            android:src="@drawable/notification"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="15dp" />

        <TextView
            android:id="@+id/profile_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Angel Dorothy"
            android:textSize="15sp"
            android:textColor="#000000"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="8dp" />

        <ImageView
            android:id="@+id/profile_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="@string/profile_icon"
            android:layout_gravity="center_vertical"
            android:src="@drawable/profile"
            tools:ignore="ImageContrastCheck" />
    </LinearLayout>

    <TextView
        android:id="@+id/notification_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="@color/dark_blue"
        android:layout_below="@id/history_icon"
        android:layout_marginTop="32dp"
        android:layout_marginStart="20dp" />

    <TextView
        android:id="@+id/markReadTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mark_all_as_read"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_below="@id/notification_title"
        android:layout_marginTop="30dp"
        android:layout_marginHorizontal="30dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/notificationContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/markReadTextView"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"/>

</RelativeLayout>
